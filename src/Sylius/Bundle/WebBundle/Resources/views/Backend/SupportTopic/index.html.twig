{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% from 'SyliusWebBundle:Backend/SupportTopic:macros.html.twig' import list %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.support'|trans }}</li>
    <li>{{ 'sylius.breadcrumb.support_topic.index'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <div class="actions-menu">
        {{ buttons.create(path('sylius_backend_support_topic_create'), 'sylius.support_topic.create'|trans) }}
    </div>
    <h1>{{ 'sylius.support_topic.index_header'|trans|raw }}</h1>
</div>

{{ list(support_topics) }}

{% endblock %}
