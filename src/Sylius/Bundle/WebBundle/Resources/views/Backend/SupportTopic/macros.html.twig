{% macro list(support_topics) %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}

{% if support_topics|length > 0 %}
<table class="table table-hover">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('title', 'sylius.support_topic.title'|trans) }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for support_topic in support_topics %}
        <tr id="{{ support_topic.id }}">
            <td>{{ support_topic.title }}</td>
            <td>
                <div class="pull-right">
                {{ buttons.edit(path('sylius_backend_support_topic_update', {'id': support_topic.id})) }}
                {{ buttons.delete(path('sylius_backend_support_topic_delete', {'id': support_topic.id})) }}
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
{{ alerts.info('sylius.support_topic.no_results'|trans) }}
{% endif %}

{% endmacro %}
