<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius.adapter.support_notification_recipient.class">Sylius\Component\Support\Adapter\ConfigNotificationRecipientAdapter</parameter>
        <parameter key="sylius.provider.support_notification_recipient.class">Sylius\Component\Support\Provider\NotificationRecipientProvider</parameter>
    </parameters>

    <services>
        <service id="sylius.adapter.support_notification_recipient" class="%sylius.adapter.support_notification_recipient.class%">
            <argument key="emails">%sylius.support.notification.recipients%</argument>
        </service>

        <service id="sylius.provider.support_notification_recipient" class="%sylius.provider.support_notification_recipient.class%">
            <argument type="service" id="sylius.adapter.support_notification_recipient" />
        </service>
    </services>

</container>
