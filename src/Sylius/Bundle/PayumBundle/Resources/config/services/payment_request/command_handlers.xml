<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="Sylius\Bundle\PayumBundle\PaymentRequest\CommandHandler\TokenPaymentRequestHandler" abstract="true">
            <argument type="service" id="Sylius\Bundle\PaymentBundle\Checker\PaymentRequestIntegrityCheckerInterface" />
            <argument type="service" id="Sylius\Bundle\PayumBundle\PaymentRequest\Resolver\DoctrineProxyObjectResolverInterface" />
            <argument type="service" id="Sylius\Bundle\PayumBundle\PaymentRequest\Factory\PayumTokenFactoryInterface" />
            <argument type="service" id="Sylius\Bundle\PayumBundle\PaymentRequest\Processor\RequestProcessorInterface" />
            <argument type="service" id="Sylius\Bundle\PayumBundle\PaymentRequest\Processor\AfterTokenRequestProcessorInterface" />
        </service>

        <service id="sylius.payment_request.payum.capture" parent="Sylius\Bundle\PayumBundle\PaymentRequest\CommandHandler\TokenPaymentRequestHandler">
            <argument type="service" id="sylius.factory.payum_capture" />
            <tag name="messenger.message_handler" bus="sylius.command_bus" handles="Sylius\Bundle\PayumBundle\PaymentRequest\Command\CapturePaymentRequest" />
            <tag name="messenger.message_handler" bus="sylius_default.bus" handles="Sylius\Bundle\PayumBundle\PaymentRequest\Command\CapturePaymentRequest" />
        </service>

        <service id="sylius.payment_request.payum.authorize" parent="Sylius\Bundle\PayumBundle\PaymentRequest\CommandHandler\TokenPaymentRequestHandler">
            <argument type="service" id="sylius.factory.payum_authorize" />
            <tag name="messenger.message_handler" bus="sylius.command_bus" handles="Sylius\Bundle\PayumBundle\PaymentRequest\Command\AuthorizePaymentRequest" />
            <tag name="messenger.message_handler" bus="sylius_default.bus" handles="Sylius\Bundle\PayumBundle\PaymentRequest\Command\AuthorizePaymentRequest" />
        </service>

        <service id="Sylius\Bundle\PayumBundle\PaymentRequest\CommandHandler\ModelPaymentRequestHandler" abstract="true">
            <argument type="service" id="Sylius\Bundle\PaymentBundle\Checker\PaymentRequestIntegrityCheckerInterface" />
            <argument type="service" id="Sylius\Bundle\PayumBundle\PaymentRequest\Resolver\DoctrineProxyObjectResolverInterface" />
            <argument type="service" id="Sylius\Bundle\PayumBundle\PaymentRequest\Processor\RequestProcessorInterface" />
        </service>

        <service id="sylius.payment_request.payum.status" parent="Sylius\Bundle\PayumBundle\PaymentRequest\CommandHandler\ModelPaymentRequestHandler">
            <argument type="service" id="sylius.factory.payum_get_status_action" />
            <tag name="messenger.message_handler" bus="sylius.command_bus" handles="Sylius\Bundle\PayumBundle\PaymentRequest\Command\StatusPaymentRequest" />
            <tag name="messenger.message_handler" bus="sylius_default.bus" handles="Sylius\Bundle\PayumBundle\PaymentRequest\Command\StatusPaymentRequest" />
        </service>
    </services>
</container>
